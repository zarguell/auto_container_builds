{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "regexManagers": [
    {
      "fileMatch": ["^dockerfiles/.*\\.Dockerfile$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\s+ARG \\S+_VERSION=(?<currentValue>\\S+)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "description": "Update OpenClaw ref in GitHub Actions checkout",
      "fileMatch": ["^\\.github/workflows/.*\\.yml$"],
      "matchStrings": [
        "repository: openclaw/openclaw\\s+ref: (?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "openclaw/openclaw"
    }
  ]
}
